#!/bin/bash
METATOOLS_BLOS_PATH=${METATOOLS_BLOS_PATH:-~/repo_tmp/stores/blos/}
METATOOLS_BLOS_REMOTEPATH=${METATOOLS_BLOS_REMOTEPATH:-repo_tmp/stores/blos/}
METATOOLS_BLOS_REMOTE=${METATOOLS_BLOS_REMOTE:-distfiles.macaronios.org}
METATOOLS_BLOS_REMOTE_USER=${METATOOLS_BLOS_REMOTE_USER:-cdn}
METATOOLS_BLOS_REMOTE_PORT=${METATOOLS_BLOS_REMOTE_PORT:-1022}

rsync -ave "ssh -p ${METATOOLS_BLOS_REMOTE_PORT}" \
  ${METATOOLS_BLOS_PATH} ${METATOOLS_BLOS_REMOTE_USER}@${METATOOLS_BLOS_REMOTE}:${METATOOLS_BLOS_REMOTEPATH}
